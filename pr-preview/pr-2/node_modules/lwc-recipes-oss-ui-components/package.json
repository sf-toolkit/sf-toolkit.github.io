{
    "name": "lwc-recipes-oss-ui-components",
    "version": "0.3.2",
    "author": "Salesforce Developer Evangelism",
    "bugs": "https://github.com/trailheadapps/lwc-recipes-oss-ui-components/issues",
    "dependencies": {
        "moment": "^2.24.0"
    },
    "description": "Lightning Web Components Recipes Open Source",
    "devDependencies": {
        "husky": "^3.0",
        "lint-staged": "^9.3.0",
        "lwc-services": "^2.0.5"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "homepage": "https://github.com/trailheadapps/lwc-recipes-oss-ui-components",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "files": [
        "src/modules/ui"
    ],
    "keywords": [
        "lwc"
    ],
    "license": "CC0-1.0",
    "lint-staged": {
        "**/*.{html,js,json,yaml,yml,md}": [
            "prettier --write"
        ],
        "**/modules/**/*.js": [
            "eslint"
        ],
        "*": [
            "git add"
        ]
    },
    "repository": "trailheadapps/lwc-recipes-oss-ui-components",
    "scripts": {
        "build": "lwc-services build --mode production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write '**/*.{css,html,js,json,md,yaml,yml}'",
        "prettier:verify": "prettier --list-different '**/*.{css,html,js,json,md,yaml,yml}'",
        "serve": "lwc-services serve",
        "test:unit": "lwc-services test",
        "test:unit:coverage": "lwc-services test --coverage",
        "test:unit:debug": "lwc-services test --debug",
        "test:unit:watch": "lwc-services test --watch",
        "watch": "lwc-services watch",
        "watch:production": "lwc-services watch --mode=production"
    },
    "lwc": {
        "modules": [
            {
                "dir": "src/modules"
            }
        ],
        "expose": [
            "ui/button",
            "ui/card",
            "ui/input",
            "ui/navfooter",
            "ui/output",
            "ui/select"
        ]
    }
}